<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorDisabledLight">
    <item>
        <shape android:shape="rectangle" android:top="0dp" android:right="0dp" android:left="0dp" android:bottom="0dp">
            <stroke android:width="10dp" android:color="#fff" />
            <solid android:color="@color/colorWhite" />
        </shape>
    </item>
    <item android:top="0dp" android:right="10dp" android:left="10dp" android:bottom="-10dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorDisabledLight"/>
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>
    <item android:right="0dp" android:left="0dp" android:top="-100dp" android:bottom="-100dp">
        <shape android:shape="rectangle">
            <stroke android:color="#fff" android:width="20dp"/>
            <solid android:color="@null"/>
        </shape>
    </item>
</ripple>